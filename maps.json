{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "config": {
    "background": "#202020d6"
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}  
    },
    {
      "data": {
        "url":"https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/TayQing/3179/refs/heads/main/aggregated_billionaires_data.csv"
            },
            "key": "country",
            "fields": ["total_wealth", "number_of_billionaires"]
          }
        },
        {
          "calculate": "isValid(datum.total_wealth) ? datum.total_wealth : 0", 
          "as": "total_wealth"  
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "total_wealth",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 1e4, 5e4, 1e5, 5e5, 1e6, 2500000], 
            "range": ["#dedede", "#fffac8", "#fdee87", "#fde64b", "#fce205", "#ffc30b","#f9a602","#c29200"]
          },
          "legend": {
            "title": "Total Wealth (in $M)",
            "orient": "right",
            "titleFont": "Didot",
            "labelFont": "Didot",
            "titleFontSize": 12,     // Increased size
            "labelFontSize": 10,     // Increased size
            "titleColor":"#ead66a",
            "labelColor":"#cfcfcf"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "total_wealth", "type": "quantitative", "title": "Total Wealth(in $M"},
          {"field": "number_of_billionaires", "type": "quantitative", "title": "Number of Billionaires"}
        ]
      }
    }
  ]
}
