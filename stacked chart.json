{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "config": {"background": "#202020d6"},
  "title": {
    "text": "Total Wealth of Billionaires by Country and Category",
    "anchor": "start",
    "color": "#ead66a",
    "fontSize": 30,
    "font": "Didot"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/TayQing/3179/refs/heads/main/Billionaires%20Statistics%20Dataset%202.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.country == 'United States' || datum.country == 'China' || datum.country == 'India' || datum.country == 'France' || datum.country == 'Germany' || datum.country == 'Switzerland' || datum.country == 'United Kingdom' || datum.country == 'Russia' || datum.country == 'Hong Kong' || datum.country == 'Canada'"
    },
    {
      "aggregate": [{"op": "sum", "field": "finalWorth", "as": "total_wealth"}],
      "groupby": ["country", "category"]
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "width": {"band": 0.6}  // adjust the width of the bar
      },
      "encoding": {
        "x": {
          "field": "country",
          "type": "nominal",
          "title": "Country",
          "sort": "y",
          "axis": {
            "grid": false,
            "titleColor": "#b79941",
            "titleFont": "Didot",
            "titleFontSize": 18,
            "labelColor": "#a4a3a0",
            "labelFont": "Didot",
            "labelFontSize": 10,
            "labelAngle": 360
          }
        },
        "y": {
          "field": "total_wealth",
          "type": "quantitative",
          "title": "Total Wealth (in billions)",
          "axis": {
            "grid": false,
            "titleColor": "#b79941",
            "titleFont": "Didot",
            "titleFontSize": 18,
            "labelColor": "#a4a3a0",
            "labelFont": "Didot",
            "labelFontSize": 10
          },
          "scale": {"domain": [0, 4500000]}
        },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": [
              "Automative",
              "Technology",
              "Fashion & Retail",
              "Finance & Investments",
              "Media & Entertainment",
              "Telecom",
              "Diversified",
              "Food & Beverage",
              "Logistics",
              "Gambling & Casinos",
              "Manufacturing",
              "Real Estate",
              "Metals & Mining",
              "Energy",
              "Healthcare",
              "Service",
              "Construction & Engineering",
              "Sports"
            ],
            "range": [
              "#FFD700",
              "#FFEB3B",
              "#B8860B",
              "#D4AF37",
              "#FFBF00",
              "#DAA520",
              "#FFC512",
              "#F4C430",
              "#F8DE7E",
              "#CFB53B",
              "#C5B358",
              "#FCC200",
              "#DA9100",
              "#FFDB58",
              "#FFF44F",
              "#EEDC82",
              "#E4D00A",
              "#F0DC82"
            ]
          },
          "title": "Category",
          "legend": {
            "titleFont": "Didot",         // Set legend title font
            "titleColor": "#b79941",    // Set legend title color
            "titleFontSize": 15,        // Set legend title font size
            "labelFont": "Didot",       // Set legend label font
            "labelColor": "#a4a3a0",     // Set legend label color
            "labelFontSize": 9          // Set legend label font size
          }
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "category", "type": "nominal", "title": "Category"},
          {
            "field": "total_wealth",
            "type": "quantitative",
            "title": "Total Wealth",
            "format": "$,.2f"
          }
        ]
      }
    }
  ]
}
