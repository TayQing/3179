{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 300,
    "config": {
      "view": {"stroke": null}, 
      "background": "#202020d6",
      "axis": {
        "labelFont": "Didot",
        "titleFont": "Didot",
        "labelFontSize": 10,
        "titleFontSize": 18,
        "labelColor": "#cfcfcf",
        "titleColor": "#ead66a",
        "grid": false 
      }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/TayQing/3179/refs/heads/main/Billionaires%20Statistics%20Dataset%202.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {"filter": "datum.rank <= 20"}  
    ],
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "personName", 
            "type": "nominal", 
            "axis": {
              "labelAngle": 30, 
              "title": "Billionaires's name"  
            },
            "sort": "y" 
          },
          "y": {
            "field": "finalWorth", 
            "type": "quantitative", 
            "axis": {
              "title": "Wealth (in $M)"
            }
          },
          "color": {
            "condition": [
              {"test": "datum.rank == 1","value": "#fff54b" },
              { "test": "datum.rank == 2", "value": "#4e79a7"},
              {"test": "datum.rank == 3", "value": "#a0cbe8"},
              {"test": "datum.rank == 4","value": "#a0cbe8" },
              {"test": "datum.rank == 5","value": "#ffbe7d" },
              { "test": "datum.rank == 6","value": "#a0cbe8" },
              {"test": "datum.rank == 7","value": "#59a14f" },
              {"test": "datum.rank == 8","value": "#8cd17d" },
              {"test": "datum.rank == 9","value": "#b6992d"},
              { "test": "datum.rank == 10","value": "#a0cbe8" },
              {"test": "datum.rank == 11","value": "#fff54b"},
              {"test": "datum.rank == 12","value": "#a0cbe8" },
              {"test": "datum.rank == 13","value": "#fff54b"},
              {"test": "datum.rank == 14", "value": "#a0cbe8"},
              {"test": "datum.rank == 15", "value": "#f1ce63"},
              {"test": "datum.rank == 16", "value": "#a0cbe8" },
              {"test": "datum.rank == 17","value": "#b6992d"},
              {"test": "datum.rank == 19","value": "#fff54b"},
              { "test": "datum.rank == 20","value": "#fff54b"}
            ],
            "value": "#dedede"
          },
          "tooltip": [  
            {"field": "personName", "type": "nominal", "title": "Billionaire"},
            {"field": "finalWorth", "type": "quantitative", "title": "Wealth ($M)"},
            {"field": "source", "type": "nominal", "title": "Source"},
            {"field": "rank", "type": "quantitative", "title": "Rank"},
            {"field": "category", "type": "nominal", "title": "Category"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "dx": -20,
          "dy": -10,
          "font": "Didot",
          "fontSize": 15,
          "color": "#ead66a"
        },
        "encoding": {
          "x": {
            "field": "personName",
            "type": "nominal",
            "axis": {
              "labelAngle": 30,
              "title": ""  
            },
            "sort": "y"
          },
          "y": {"field": "finalWorth", "type": "quantitative"},
          "text": {
            "condition": [
              {"test": "datum.rank == 1", "value": "LVMH"},
              {"test": "datum.rank == 20", "value": "Walmart"}
            ],
            "value": null
          }
        }
      }
    ]
  }
  