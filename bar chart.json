{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "config": {
    "view": {"stroke": null}, 
    "background": "#202020d6",
    "axis": {
      "labelFont": "Didot",
      "titleFont": "Didot",
      "labelFontSize": 12,
      "titleFontSize": 20,
      "labelColor": "#cfcfcf",
      "titleColor": "#ead66a",
      "grid": false 
    }
  },
  "params": [
    {
      "name": "Category_selection",
      "bind": {
        "input": "select",
        "options": [null, "Automotive", "Technology", "Fashion & Retail", "Finance & Investments", "Media & Entertainment", "Telecom", "Diversified", "Food & Beverage", "Logistics", "Gambling & Casinos", "Manufacturing", "Real Estate", "Metals & Mining", "Energy", "Healthcare", "Service", "Construction & Engineering", "Sports"],
        "labels": ["Show All", "Automotive", "Technology", "Fashion & Retail", "Finance & Investments", "Media & Entertainment", "Telecom", "Diversified", "Food & Beverage", "Logistics", "Gambling & Casinos", "Manufacturing", "Real Estate", "Metals & Mining", "Energy", "Healthcare", "Service", "Construction & Engineering", "Sports"],
        "name": "Select Category: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/TayQing/3179/refs/heads/main/Billionaires%20Statistics%20Dataset%202.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.rank <= 20"},
    {"filter": "Category_selection == null || datum.category == Category_selection"}
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "personName", 
          "type": "nominal", 
          "axis": {
            "labelAngle": 60, 
            "title": "Billionaires's name"  
          },
          "sort": "y" 
        },
        "y": {
          "field": "finalWorth", 
          "type": "quantitative", 
          "axis": {
            "title": "Wealth (in $M)"
          }
        },
        "color": {
          "condition": [
            {"test": "datum.rank == 1","value": "#fff54b" },
            { "test": "datum.rank == 2", "value": "#cfcfcf"},
            {"test": "datum.rank == 3", "value": "#cfcfcf"},
            {"test": "datum.rank == 4","value": "#cfcfcf" },
            {"test": "datum.rank == 5","value": "#cfcfcf" },
            { "test": "datum.rank == 6","value": "#cfcfcf" },
            {"test": "datum.rank == 7","value": "#cfcfcf" },
            {"test": "datum.rank == 8","value": "#cfcfcf" },
            {"test": "datum.rank == 9","value": "#cfcfcf"},
            { "test": "datum.rank == 10","value": "#cfcfcf" },
            {"test": "datum.rank == 11","value": "#cfcfcf"},
            {"test": "datum.rank == 12","value": "#cfcfcf" },
            {"test": "datum.rank == 13","value": "#cfcfcf"},
            {"test": "datum.rank == 14", "value": "#cfcfcf"},
            {"test": "datum.rank == 15", "value": "#cfcfcf"},
            {"test": "datum.rank == 16", "value": "#cfcfcf" },
            {"test": "datum.rank == 17","value": "#cfcfcf"},
            {"test": "datum.rank == 19","value": "#cfcfcf"},
            { "test": "datum.rank == 20","value": "#fff5cfcfcf4b"}
          ],
          "value": "#dedede"
        },
        "tooltip": [  
          {"field": "personName", "type": "nominal", "title": "Billionaire"},
          {"field": "finalWorth", "type": "quantitative", "title": "Wealth ($M)"},
          {"field": "source", "type": "nominal", "title": "Source"},
          {"field": "rank", "type": "quantitative", "title": "Rank"},
          {"field": "category", "type": "nominal", "title": "Category"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -20,
        "dy": -10,
        "font": "Didot",
        "fontSize": 15,
        "color": "#ead66a"
      },
      "encoding": {
        "x": {
          "field": "personName",
          "type": "nominal",
          "axis": {
            "labelAngle": 60,
            "title": ""  
          },
          "sort": "y"
        },
        "y": {"field": "finalWorth", "type": "quantitative"},
        "text": {
          "condition": [
            {"test": "datum.rank == 1", "value": "LVMH"}
          ],
          "value": null
        }
      }
    }
  ]
}
